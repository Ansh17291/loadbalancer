    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "redis": "^4.6.8",
    "geoip-lite": "^1.4.7",
    "express-useragent": "^1.0.15",
    "winston": "^3.10.0",
    "socket.io": "^4.7.2",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {

{
  "name": "loadbalancer-pro",
  "version": "1.0.0",
  "description": "Production-ready load balancer with DDoS protection and real-time monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:lb": "node server.js",
    "start:s1": "node backend-servers/server1.js",
    "start:s2": "node backend-servers/server2.js",
    "start:s3": "node backend-servers/server3.js",
    "start:s4": "node backend-servers/server4.js",
    "test": "jest",
    "docker:build": "docker build -t loadbalancer-pro .",
    "docker:run": "docker run -p 3000:3000 loadbalancer-pro",
    "cluster": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "logs": "pm2 logs"
  },
  "keywords": [
    "load-balancer",
    "ddos-protection",
    "reverse-proxy",
    "nodejs",
    "production"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
